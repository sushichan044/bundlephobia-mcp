{
  "name": "bundlephobia-mcp",
  "version": "0.0.1",
  "type": "module",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "bundlephobia-mcp": "bin/stdio-server.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sushichan044/bundlephobia-mcp.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "author": {
    "name": "sushichan044",
    "url": "https://github.com/sushichan044"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.9.0",
    "fastmcp": "1.21.0",
    "ofetch": "1.4.1",
    "valibot": "1.0.0",
    "zod": "3.24.2"
  },
  "scripts": {
    "build": "unbuild",
    "lint": "eslint --max-warnings 0 .",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "pkg-pr-new": "pkg-pr-new publish --compact --comment=update --pnpm",
    "check": "pnpm run build && pnpm run lint && pnpm run format:ci && pnpm run typecheck"
  },
  "devDependencies": {
    "@types/node": "22.14.1",
    "@virtual-live-lab/eslint-config": "2.2.21",
    "@virtual-live-lab/prettier-config": "2.0.19",
    "@virtual-live-lab/tsconfig": "2.1.20",
    "eslint": "9.24.0",
    "pkg-pr-new": "0.0.42",
    "prettier": "3.5.3",
    "release-it": "18.1.2",
    "release-it-pnpm": "4.6.4",
    "tsx": "4.19.3",
    "typescript": "5.8.3",
    "unbuild": "3.5.0"
  },
  "packageManager": "pnpm@10.8.1"
}
